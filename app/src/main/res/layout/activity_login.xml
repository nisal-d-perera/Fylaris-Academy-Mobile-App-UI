<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="#fcfcfc">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/fylaris"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/text8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Student Login"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="#0d073d"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#0D073D"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Username"
        android:inputType="text"
        android:paddingBottom="25dp"
        android:textColor="#0D073D"
        android:textColorHint="#8A8383"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#0D073D"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="25dp"
        android:textColor="#0D073D"
        android:textColorHint="#8A8383"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#5472fb"/>

    <TextView
        android:id="@+id/text20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="didn't have an account ?  Register Now"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#5472fb"
        android:clickable="true"
        android:focusable="true"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0d073d"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="25dp"/>



</LinearLayout>